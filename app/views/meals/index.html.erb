<h2>Voici la liste de tous les plats</h2>
<hr>
<div class="row">
		<div class="col-md-12">
			<p>Chosisez un votre régime</p>
			<%= select("post", "meal_type_id", MealType.all.collect {|p| [ p.name, p.id ] }, { include_blank: true }) %>
		</div>
	</div>
	<hr>
</div>
<div class="row">

		<% @meals.each do |meal| %>
			<div class="col-md-6">
				<p>Nom du plat : <%= meal.title %></p>
				<p>Description du plat : <%= meal.description %></p>
				<p>Type de plat : <%= meal.meal_type.name %></p>
			    <%= link_to 'Voir détails', meal_path(meal.id), class:"btn btn-primary" %>
			    <hr>
		    </div>
		<% end %>

</div>

			